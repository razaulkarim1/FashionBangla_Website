<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top m-font">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               @Html.ActionLink("FashionBangla", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                  
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>     
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Products
                            <span class="caret"></span>
                        </a>
                        
                        <ul class="dropdown-menu m-dropdown class="list-group">

                            <li class="list-group-item">@Html.ActionLink("Men", "Index", "Products", new { Id = 1 }, new { })</li>
                            <li class="list-group-item">@Html.ActionLink("Women", "Index", "Products", new { Id = 2 }, new { })</li>
                            <li class="list-group-item">@Html.ActionLink("Kids", "Index", "Products", new { Id = 3 }, new { })</li>
                            <li class="list-group-item">@Html.ActionLink("Home Decor", "Index", "Products", new { Id = 4 }, new { })</li>
                            <li class="list-group-item">@Html.ActionLink("Wedding", "Index", "Products", new { Id = 5 }, new { })</li>
                        </ul>
                      
                       
                    </li>
                    <li>@Html.ActionLink("Show Room", "Contact", "Home")</li>
                    @*<li>@Html.ActionLink("Events", "Event", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row m-logo">
            <div class="col-md-3">
                <img src="/Images/Home/f_logo.jpg" alt="FashionBangla" width="250" />
            </div>
            <div class="col-md-6 col-md-offset-1">
                <div class="text-center">
                    <ul class="nav navbar-nav">
                        <li class="">@Html.ActionLink("Men", "Index", "Products", new { Id = 1 }, new { })</li>
                        <li class="">@Html.ActionLink("Women", "Index", "Products", new { Id = 2 }, new { })</li>
                        <li class="">@Html.ActionLink("Kids", "Index", "Products", new { Id = 3 }, new { })</li>
                        <li class="">@Html.ActionLink("Home Decor", "Index", "Products", new { Id = 4 }, new { })</li>
                        <li class="">@Html.ActionLink("Wedding", "Index", "Products", new { Id = 5 }, new { })</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                <div class="text-right">
                    <a href="#" style="padding-left:10px;"><span class="fa fa-2x fa-facebook-official" style="color:#3e56c8"></span></a> &nbsp;
                    <a href="#" style="padding-left:10px;"><span class="fa fa-2x fa-twitter" style="color:#24b11d;"></span></a>&nbsp;
                    <a href="#" style="padding-left:0px;"><span class="fa fa-2x fa-google-plus" style="color:#ff0000"></span></a>&nbsp;
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
    </div>
    <div class="container-fluid">
        <footer>
            <div class="row m-bgcolorb m-footer">
                <div class="col-md-3">
                    <img src="/Images/Home/logo.png" width="200" />
                    <div>
                        <p>FashionBangla, the Pioneer Lifestyle Brand in Bangladesh.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <p>Products</p>
                    <hr />
                    <ul class="list-group">
                        <li>@Html.ActionLink("Men", "Index", "Products", new { Id = 1 }, new { })</li>
                        <li>@Html.ActionLink("Women", "Index", "Products", new { Id = 2 }, new { })</li>
                        <li>@Html.ActionLink("Kids", "Index", "Products", new { Id = 3 }, new { })</li>
                        <li>@Html.ActionLink("Home Decor", "Index", "Products", new { Id = 4 }, new { })</li>
                        <li>@Html.ActionLink("Wedding", "Index", "Products", new { Id = 5 }, new { })</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <p>Links</p>
                    <hr />
                    <ul class="list-group">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li> 
                        <li>@Html.ActionLink("Show Room", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Events", "Event", "Home")</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <p>Official Address</p>
                    <hr />
                    <address>
                        FashionBangla<br />
                        234/3, Banasree, Dkaka
                    </address>
                    <hr />
                    <p>Show Room</p>
                    <hr />
                    <address>
                        <span>Molla Taoar</span><br />
                        Rampura, Dkaka
                    </address>
                    <address>
                        <span>ForTun ShopingMal</span><br />
                        Malibag, Dkaka
                    </address>
                    <address>
                        <span>ShopingMal</span> <br />
                        Panthpoth, Dkaka
                    </address>


                </div>
            </div>
            <div class="row m-black">
                <div class="col-md-12">
                    <p class="text-center">&copy;All right reserved by FashionBangla Fashion Hous 2017</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
